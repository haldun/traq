<% title "Sign up" %>

<div class="row">
  <div class="span8">
    <%= simple_form_for user do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :time_zone %>
      <!-- <div class="actions"> -->
        <%= submit_tag "Sign up", :class => "btn large danger" %>
      <!-- </div> -->
    <% end -%>
  </div>
  <div class="span8">

  </div>
</div>

